# Environment Configuration for Stevedores Dashboard 3.0 Production
# Copy this file to .env and configure for your deployment

# Application Configuration
FLASK_ENV=production
FLASK_CONFIG=production
SECRET_KEY=your-super-secret-key-change-this-in-production

# Database Configuration
DATABASE_URL=postgresql://stevedores:your_db_password@localhost:5432/stevedores_dashboard
DB_PASSWORD=your_db_password

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Email Configuration (for notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Push Notifications (generate at https://vapidkeys.com/)
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key

# Monitoring and Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
PROMETHEUS_METRICS=true

# Security Configuration
SSL_KEYFILE=/path/to/ssl/key.pem
SSL_CERTFILE=/path/to/ssl/cert.pem

# Upload Configuration
UPLOAD_FOLDER=/var/uploads/stevedores
MAX_CONTENT_LENGTH=16777216  # 16MB

# Worker Configuration
WEB_WORKERS=4
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Logging Configuration
LOG_LEVEL=INFO

# Rate Limiting
RATELIMIT_STORAGE_URL=redis://localhost:6379/1

# Monitoring Passwords
GRAFANA_PASSWORD=your-grafana-password

# Development Overrides (for local development)
# Uncomment these for development mode
# FLASK_ENV=development
# FLASK_CONFIG=development
# DEBUG=true
# DATABASE_URL=sqlite:///stevedores_dev.db

# Production Deployment
PORT=8000
WORKERS=4

# Docker Compose overrides
COMPOSE_PROJECT_NAME=stevedores-dashboard